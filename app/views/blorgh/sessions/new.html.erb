
<h1>Log in</h1>

<%= form_for(:sessions, url: login_path) do |f| %>
    <%= f.label :email %><br />
    <%= f.email_field :email, class:'form-control' %>
    <%= f.label :password %><br />
    <%= f.password_field :password , class:'form-control'%>
		<%= f.submit "Log in", class:'btn' %>
<% end %>
