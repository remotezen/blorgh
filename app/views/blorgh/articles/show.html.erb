<ul class="index-list">
	<li> 
		<%= gravatar_for @article.author %>
		<h3>
			<%= @article.author.name %>
		</h3>
	</li>
	<li>
		<h3>
				<%=@article.title %>
		</h3>
	</li>
	<li class="article-text">
		<div class="well">
			<p>
				<%=@article.text %>
			</p>
		</div>
	</li>
	<li>
		<ul>
			<%=render @article.comments %>
		</ul>
		<%= render 'blorgh/comments/form' %>
	<%= link_to :edit, edit_article_path(@article) %>
	<%= link_to :new, new_article_path %>

	</li>
</ul>
